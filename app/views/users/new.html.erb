<% provide :title, 'Registrazione' %>

<div class="img_logo">
  <%= image_tag("Viaggi del Guizaglio_Logo.png") %>
</div>

<h2>Inserisci i tuoi dati</h2>

<div class="dati_form">
<%= form_for @user, :url => {:action => "create"} do |f|%>
    <%= render 'shared/error_messages', object: f.object%>

    <%= f.label :name, 'Nome:'%>
    <%= f.text_field :name %><br />

    <%= f.label :email, 'E-mail:'%>
    <%= f.text_field :email %><br />

    <%= f.label :password, 'Password:'%>
    <%= f.password_field :password %><br />

    <%= f.label :password_confirmation, 'Conferma password:' %>
    <%= f.password_field :password_confirmation %><br /><br />

    <%= f.submit 'Crea il mio account', class: "brn btn-large btn-primary" %>
<% end %>
</div>