<% provide :title, 'Login' %>

<h1> Registrazione</h1>

<div class="row">

    <%= form_for(:session, url: sessions_path) do |f| %>

        <%= f.label :email %>
        <%= f.text_field :email %>

        <%= f.label :password %>
        <%= f.password_field :password %>

        <%= f.submit 'Ok', class: 'btn btn-large btn-primary' %>
    <% end %>

    <p>Sei nuovo? <%= link_to 'Registrati adesso!', signup_path %></p>
</div>